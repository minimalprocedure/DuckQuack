#!/bin/sh

if [ -L $0 ]
then
    BASEPATH=$(dirname $(readlink -f $0))
else
    BASEPATH=$(dirname $0)
fi

if [ $1="install" ]
then
  INSTALL_PHASE="--binstubs"
else
  SEARCH_PARAM="-S"
fi

BASEPATH=$(realpath $BASEPATH)
CD=$(realpath $(dirname $BASEPATH))
cd $CD

export GEM_HOME="./.gems"
export GEM_PATH="./.gems"

java -jar $BASEPATH/jruby-complete.jar $SEARCH_PARAM $GEM_HOME/bin/bundle $1 $2 $3 $4 $5 $6 $7 $8 --path=$GEM_PATH $INSTALL_PHASE

echo done...
